{
  "name": "webpack-config-generator",
  "version": "1.0.0",
  "private": true,
  "description": "Generates a starter webpack config file",
  "main": "server/server.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run start:client\"",
    "start:server": "nodemon server/server",
    "start:client": "webpack-dev-server --hot",
    "test": "jest -i --watch",
    "test:update": "npm run test --updateSnapshot",
    "test:coverage": "jest -i --coverage",
    "deploy": "wmake",
    "db": "node save-data/mongodb-orm.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "mongoose": "^5.2.13",
    "normalize.css": "^8.0.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-hot-loader": "^4.3.6",
    "react-router-dom": "^4.3.1",
    "webfontloader": "^1.6.28",
    "whatwg-fetch": "^2.0.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setupTests.js",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/server/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.2",
    "css-loader": "^1.0.0",
    "eslint-loader": "^2.1.0",
    "jshint-loader": "^0.8.4",
    "less-loader": "^4.1.0",
    "prettier": "^1.14.2",
    "prettier-webpack-plugin": "^1.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-loader": "^5.1.0"
  }
}
